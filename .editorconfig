# See http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
max_line_length = 100

# Makefiles are broken without using actual tabs for indentation.
[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab

[{Dockerfile,*.md}]
indent_size = 8
